<h1>Listing admin_plots</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Features</th>
      <th>Property types</th>
      <th>Regions</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Town</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_plots.each do |admin_plot| %>
      <tr>
        <td><%= admin_plot.title %></td>
        <td><%= admin_plot.price %></td>
        <td><%= admin_plot.feature.name %></td>
        <td><%= admin_plot.property_type.name %></td>
        <td><%= admin_plot.region.name %></td>
        <td><%= admin_plot.address1 %></td>
        <td><%= admin_plot.address2 %></td>
        <td><%= admin_plot.town %></td>
        <td><%= admin_plot.postcode %></td>
        <td><%= link_to 'Show', admin_plot %></td>
        <td><%= link_to 'Edit', edit_admin_plot_path(admin_plot) %></td>
        <td><%= link_to 'Destroy', admin_plot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plot', new_admin_plot_path %>
